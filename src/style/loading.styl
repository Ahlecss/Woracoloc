.loadScreen 
  position absolute
  top 0
  width 100%
  height 100%
  background-color #000
  display flex
  flex-direction column
  justify-content center
  align-items center
  transition 0.55s opacity ease-out
  z-index: 1000

.load
  margin 0 0 30px 0
  padding 0
  color #fff
  font-family Montserrat
  user-select none

.progressBar
  border-radius 8px
  width 300px
  background-color #232323

.progress
  border-radius 8px
  width 0px
  height 7px
  background-color #fff
  transition 0.32s ease-out width

.start--screen
  position absolute
  top 0
  width 100%
  height 100%
  background-color #000
  display flex
  flex-direction column
  justify-content space-around
  align-items center
  transition 0.55s opacity ease-out
  z-index 100
  // background-image url('~/../static/tkt.png')


.start--button {
    font-size: 1em;
    margin-top: -10px;
    padding-right: 35px;
    color: #FFF;
    text-decoration: none;  
    display: inline-block;
    cursor: pointer;
    z-index: 100;
    font-family: 'Verdana'

}
.start--button:after {
    transition: all ease-in-out .2s;
    background: none repeat scroll 0 0 #ffffff;
    content: "";
    display: block;
    height: 2px;
    width: 0;
}
.start--button:hover:after {
    width: 100%;
}

#start--image {
  height 50%
  display flex
  flex-direction column
  justify-content center
  align-items center
  transition 0.55s opacity ease-out
  z-index 100
  }

